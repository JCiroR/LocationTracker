<div class="login">
	<div class="container">
		<div class="form">

      <h1 class="title">Location tracker</h1>

        <%= form_for(:session, url: login_path) do |f| %> 
        <%= f.text_field :user_name, :placeholder => "User name" %> 
        <%= f.password_field :password, :placeholder => "Password" %> 
        <%= f.submit "Log in", class: "btn-submit" %>
        <% end %>
		
    </div>
	</div>
</div>